<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardCornerRadius="18dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/blue_main">

        <ImageView
            android:id="@+id/item_hot_sale_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_hot_sale_tv_new"
            style="@style/TextLabelNew"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/background_circle_button"
            android:gravity="center"
            android:text="@string/sale_new" />

        <TextView
            android:id="@+id/item_hot_sale_tv_title"
            style="@style/TextHotSaleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/white"
            android:textSize="26sp"
            tools:text="Iphone 12" />

        <TextView
            android:id="@+id/item_hot_sale_tv_subtitle"
            style="@style/TextHotSaleSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="Super. Mega. Rapido." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_hot_sale_btn_buy"
            style="@style/TextHotSaleBuy"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="28dp"
            android:paddingHorizontal="36dp"
            android:text="@string/buy_now"
            android:theme="@style/Theme.EffectiveShop.WhiteButton" />

    </LinearLayout>

</androidx.cardview.widget.CardView>